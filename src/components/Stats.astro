---
interface Stat {
  amount: number;
  title: string;
}
interface Stats {
    stats: Array<Stat>
}
const {stats=[]}= Astro.props as Stats
---

<section class="flex flex-wrap justify-center -m-4 text-center">
    {
        stats.map(({ amount, title}) => (
      <article class="p-4 md:w-1/4 sm:w-1/2 w-full min-w-[220px] text-center md:border-r md:last:border-none dark:md:border-slate-500">
        <p class="font-heading text-primary text-[2.6rem] font-bold dark:text-white lg:text-5xl xl:text-6xl">
        {amount}
        </p>
        <p class="text-sm font-medium uppercase tracking-widest text-gray-800 dark:text-slate-400 lg:text-base">
        {title}
        </p>
    </article>
      ))
  }
</section>
