---
 
interface Item {
  title: string;
  description: string;
  icon?: string;
}
interface Items{
    items: Array<Item>
}
const {items=[]}= Astro.props as Items
---
<section class="grid mx-auto gap-8 md:gap-y-12 sm:grid-cols-2">
    {items.map(({title,description,icon}) => (
        <article class="flex flex-row max-w-md">
                <img class="flex justify-center w-7 h-7 mr-2 rtl:mr-0 rtl:ml-2  w-10 h-10 p-2 md:w-12 md:h-12 md:p-3 mr-4 rtl:ml-4 rtl:mr-0"
                src={icon}
                />
            <div class='text-xl text-left'>
                <h3 class=' font-bold md:text-[1.3rem]'>
                {title}
                </h3>
                <p class="text-muted">
                {description}
                </p>
            </div>
        </article>
    ))
    }
</section>